  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />
  <link rel="stylesheet" href="./assets/style/all.css">
</head>

<body>

  <nav class="navbar navbar-expand-lg bg-gray-f0">
    <div class="container-md">

      <a class="navbar-brand py-lg-8" href="index.html">
        <img class="header__logo" src="assets/images/logo.svg" alt="logo">
      </a>

      <form class="d-flex ms-auto px-lg-12 py-lg-8 ">
        <input class="header__search form-control me-2 d-none d-lg-block me-6" type="search" placeholder="搜尋作品名稱、藝術家名稱"
          aria-label="Search">
        <button class="btn d-none d-lg-block" type="button" onclick="location.href='art-filter.html'">
          <i class="fa-solid fa-magnifying-glass fs-4"></i>
        </button>
        <button class="btn box-shadow-none d-lg-none" type="button" id="toggleSearch">
          <i class="fa-solid fa-magnifying-glass fs-6"></i>
        </button>
      </form>

      <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
        aria-label="Toggle navigation">
        <i class="fa-solid fa-bars fs-6 d-none"></i>
        <i class="fa-solid fa-xmark fs-5"></i>
      </button>

      <div class="collapse navbar-collapse flex-grow-0 " id="navbarSupportedContent">
        <ul class="navbar-nav align-items-center mb-2 mb-lg-0 ">
          <li class="header__menu__item nav-item">
            <a class="nav-link py-6 px-lg-12 py-lg-10" href="discover.html">探索</a>
          </li>
          <li class="header__menu__item nav-item">
            <a class="nav-link py-6 px-lg-12 py-lg-10" href="market.html">市值</a>
          </li>
          <li class="header__menu__wallet nav-item align-self-stretch align-self-lg-center">
            <a class="nav-link pe-0 py-lg-10 d-none d-lg-block" href="#" data-bs-toggle="modal"
              data-bs-target="#connect-wallet">
              <i class="fa-solid fa-wallet fs-lg-4 ps-12 "></i>
            </a>
            <a class="d-lg-none d-block btn" href="#" style="margin-top: -1px;" data-bs-toggle="modal"
              data-bs-target="#connect-wallet">連結錢包</a>
          </li>
        </ul>
      </div>

      <!-- 隱藏的 search bar ,在手機版點擊才會出現 -->
      <form class="header__search__bar d-none d-flex justify-content-between align-items-center" id="headerSearchBar">
        <button class="btn " type="button" id="searchBack">
          <i class="fa-solid fa-angle-left fs-6"></i>
        </button>

        <input class="header__search form-control me-2 " type="search" placeholder="搜尋作品名稱、藝術家名稱" aria-label="Search">

        <button class="btn" type="buton" id="searchBtn">
          <i class="fa-solid fa-magnifying-glass fs-6"></i>
        </button>
      </form>

    </div>
    <!-- modal -->
    <div class="modal fade" id="connect-wallet" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
      aria-labelledby="staticBackdropLabel" aria-hidden="true">
      <!-- Vertically centered scrollable modal -->
      <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-fullscreen-md-down">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title ms-auto" id="staticBackdropLabel">連結你的錢包</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="row g-2">
              <div class="col-lg-6">
                <button class="btn-connect w-100" type="button">
                  <div class="d-flex align-items-center">
                    <img class="icon-16 me-4" src="assets/images/logo/connect01.png" alt="metamask">
                    <span class="font-squada fs-7 lh-1 mb-0">MetaMask</span>
                  </div>
                </button>
              </div>
              <div class="col-lg-6">
                <button class="btn-connect w-100" type="button">
                  <div class="d-flex align-items-center">
                    <img class="icon-16 me-4" src="assets/images/logo/connect02.png" alt="coinbase">
                    <span class="font-squada fs-7 lh-1 mb-0">Coinbase Wallet</span>
                  </div>
                </button>
              </div>
              <div class="col-lg-6">
                <button class="btn-connect w-100" type="button">
                  <div class="d-flex align-items-center">
                    <img class="icon-16 me-4" src="assets/images/logo/connect03.png" alt="wallet connect">
                    <span class="font-squada fs-7 lh-1 mb-0">WalletConnect</span>
                  </div>
                </button>
              </div>
              <div class="col-lg-6">
                <button class="btn-connect w-100" type="button">
                  <div class="d-flex align-items-center">
                    <img class="icon-16 me-4" src="assets/images/logo/connect04.png" alt="phantom">
                    <span class="font-squada fs-7 lh-1 mb-0">Phantom</span>
                  </div>
                </button>
              </div>
              <div class="col-lg-6">
                <button class="btn-connect w-100" type="button">
                  <div class="d-flex align-items-center">
                    <img class="icon-16 me-4" src="assets/images/logo/connect05.png" alt="Glow">
                    <span class="font-squada fs-7 lh-1 mb-0">Glow</span>
                  </div>
                </button>
              </div>
              <div class="col-lg-6">
                <button class="btn-connect w-100" type="button">
                  <div class="d-flex align-items-center">
                    <img class="icon-16 me-4" src="assets/images/logo/connect06.png" alt="fortmatic">
                    <span class="font-squada fs-7 lh-1 mb-0">Fortmatic</span>
                  </div>
                </button>
              </div>
            </div>
          </div>
          <div class="modal-footer border-0 justify-content-center pt-2">
            <button type="button" class="btn btn-bid px-12 py-2 fs-6" data-bs-dismiss="modal">連結錢包</button>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <main>
    <%- contents %>
  </main>

  <footer class="footer py-6 border-top border-4 border-primary text-center bg-gray-f0">
    © ART NFT. All Rights Reserved
  </footer>




  <script src="./assets/js/vendors.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
  <script src="https://unpkg.com/imagesloaded@5/imagesloaded.pkgd.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/masonry-layout@4.2.2/dist/masonry.pkgd.min.js"
    integrity="sha384-GNFwBvfVxBkLMJpYMOABq3c+d3KnQxudP/mGPkzpZSTYykLBNsZEnG2D9G/X/+7D" crossorigin="anonymous"
    async></script>
  <script src="./assets/js/all.js"></script>
</body>

</html>